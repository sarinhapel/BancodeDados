-- create a table
CREATE TABLE quimica (
 id INT (3) PRIMARY KEY
  nome VARCHAR (25),
  formula  VARCHAR (25) NOT NULL,
  propriedade VARCHAR(25) NOT NULL,
  reacao VARCHAR (25) NOT NULL
);
-- insert some values
INSERT INTO quimica VALUES ('agua','H2O','possui grande capacidade de dissolver diversas substancias','hidrolise');
INSERT INTO quimica VALUES ('gas helio','He','gas monoatomico, baixo peso, incolor, inodoro, nao inflamável e nao toxico','nao sofre reacao quimica');
INSERT INTO quimica VALUES ('sal','NaCl','eh soluvel em agua','reacao de neutralizacao entre um ácido e uma base');
INSERT INTO quimica VALUES ('areia','SiO2','rochas permeaveis','fotocatalítica');
INSERT INTO quimica VALUES ('oxigenio','o2','gasoso,incolor,liquido e solido','culmina com a produção de luz e calor');
INSERT INTO quimica VALUES ('acucar','C12H24O12','triboluminescencia','hidrolise');
-- fetch some values
SELECT * FROM quimica WHERE formula = 'H2O';
